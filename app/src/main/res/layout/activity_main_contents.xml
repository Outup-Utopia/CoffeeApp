<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainContentsActivity">

    <!--Tool Bar-->
    <RelativeLayout
            android:id="@+id/ToolBar01"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/shape_tool_bar02">

        <TextView
                android:id="@+id/ToolBarTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="statement - Login"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        <TextView
                android:id="@+id/UserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ToolBarTittle"
                android:text="abc@example.com"
                android:textColor="@color/white"/>

        <ImageButton
                android:id="@+id/LogoutBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/logout"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"/>

    </RelativeLayout>

    <!--Content View-->

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"></ScrollView>

    <!--Add Content Bottom-->

    <RelativeLayout
            android:id="@+id/AddBtnBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000">

        <!--Add Content Button-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                app:fabCustomSize="50dp"
                android:src="@drawable/add"
                android:layout_alignParentEnd="true"
                android:tint="@color/white"/>

    </RelativeLayout>

</RelativeLayout>