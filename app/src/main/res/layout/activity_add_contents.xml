<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.AddContentsActivity">

    <!--Tool Bar-->
    <RelativeLayout
            android:id="@+id/toolbarRL"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/shape_tool_bar01">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Add a New Content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
        />

    </RelativeLayout>

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarRL">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!--Content Tittle-->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ContentTittleInputForAddContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false">

                <EditText
                        android:id="@+id/ContentTittleEditForAddContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edit_text01"
                        android:hint="Tittle"
                        android:maxLines="1"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Coffee Name-->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/CoffeeNameInputForAddContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_below="@+id/ContentTittleInputForAddContent"
                    android:layout_marginTop="0dp"
                    app:hintEnabled="false">

                <EditText
                        android:id="@+id/CoffeeNameEditForAddContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_edit_text01"
                        android:hint="Name"
                        android:maxLines="1"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Size-->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/SizeInputForAddSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/CoffeeNameInputForAddContent"
                    app:hintEnabled="false"

                >

                <EditText
                        android:id="@+id/SizeEditForAddContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Size"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--Option-->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/OptionInputForAddContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/SizeInputForAddSize"
                    app:hintEnabled="false">

                <EditText
                        android:id="@+id/OptionEditForAddContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Option Description"
                        android:inputType="textMultiLine|textCapSentences"
                        android:padding="10dp"
                        android:textColor="@color/black"
                         android:textColorHint="@color/grey"
                        />

            </com.google.android.material.textfield.TextInputLayout>

            <!--image-->
            <RelativeLayout
                    android:id="@+id/imageInputForAddContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/OptionInputForAddContent"
                    >
                

                <!--back NO image-->
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:id="@+id/BackImageNone"
                        android:background="@color/purple_200"
                        />

                <!--中央に載せるテキスト画像-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="↑ Upload image"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <!--Upload Button-->
            <Button
                    android:id="@+id/UploadButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageInputForAddContent"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/shape_button01"
                    android:text="+ Upload the Content"
                    android:textColor="@color/white"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>