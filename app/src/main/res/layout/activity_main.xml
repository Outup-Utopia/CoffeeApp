<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iconIv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/FirstText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconIv"
            android:layout_marginTop="50dp"
            android:text="Welcome to Coffee App"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/iconIv"
            app:layout_constraintStart_toStartOf="@id/iconIv"
    />

    <TextView
            android:id="@+id/SecondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconIv"
            android:layout_marginTop="50dp"
            android:text="blank"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="23dp"
            app:layout_constraintTop_toBottomOf="@id/FirstText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/iconIv"
    />

    <Button
            android:id="@+id/loginJumpButton"
            android:layout_width="700px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/white"
            android:background="@drawable/shape_button01"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@id/SecondText"
           />
    <Button
            android:id="@+id/signUpJumpButton"
            android:layout_width="700px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@color/white"
            android:background="@drawable/shape_button01"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/loginJumpButton"
    />
    <Button
            android:id="@+id/skipButton"
            android:layout_width="700px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="Continue without login"
            android:textColor="@color/purple_500"
            android:background="@drawable/shape_button02"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/signUpJumpButton"
    />

</androidx.constraintlayout.widget.ConstraintLayout>